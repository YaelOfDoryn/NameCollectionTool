@model HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div>

</div>

@*Person names table*@
 <div class="card mb-4">
     <div class="card-header">
         <div class="container-fluid">
            <div class="row">
                <div class="col-sm-10">
                    <i class="fa-solid fa-people-group"></i>
                    Person names
                </div>
                <div class="col-sm-2" style="text-align:right;">
                    <a asp-controller="PersonNames" asp-action="Create">Add name</a>
                </div>
            </div>
         </div>
     </div>
     <div class="card-body">
         <table class="datatable-table table table-striped" id="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Etymology</th>
                    <th scope="col">Tags</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var name in Model.PersonNames)
            {
                <tr>
                    <th scope="row">@name.Id</th>
                    <td>@name.FirstName</td>
                    <td>@name.LastName</td>
                    <td>@name.Gender</td>
                    <td>@name.Etymology</td>
                    <td>
                    @if (name.Tags != null)
                    {  
                        @foreach (var tag in name.Tags)
                        {
                            <span> @tag ,</span>
                        }
                    }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


