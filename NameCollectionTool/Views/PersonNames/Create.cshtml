@model PersonNameViewModel

@{
    ViewData["Title"] = "Create person name";
}

<div class="text-center">
    <h1 class="display-4">Add a new person name to the collection</h1>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-xs-3 text-right">
                    <label asp-for="FirstName" class="control-label margin-bottom"></label>
                </div>
                <div class="col-xs-9">
                    <input asp-for="FirstName" class="form-control margin-bottom" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-3 text-right">
                    <label asp-for="LastName" class="control-label margin-bottom"></label>
                </div>
                <div class="col-xs-9">
                    <input asp-for="LastName" class="form-control margin-bottom"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Etymology" class="control-label margin-bottom"></label>
                <input asp-for="Etymology" class="form-control margin-bottom" />
                <span asp-validation-for="Etymology" class="text-danger margin-bottom"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label margin-bottom"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control margin-bottom">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div><label asp-for="Tags" class="control-label margin-bottom"></label> <i class="fa-solid fa-circle-info" data-toggle="tooltip" data-placement="top" title="Add multiple tags by seperating them with a comma."></i></div>
                <input asp-for="Tags" class="form-control margin-bottom" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.toast))
    {
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000" style="background-color: lightgreen; position: absolute; bottom: 75px; right: 0;">
            <div class="toast-header">
                @ViewBag.toast
            </div>
        </div>
    }


@section scripts {
     <script>
$('.toast').toast('show');
$('[data-toggle="tooltip"]').tooltip();
    </script>
}
